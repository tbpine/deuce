@page
@model TournamentVenuePageModel
@{
    Layout="_LayoutWizard";
}

<!-- Venue  content -->
<div class="col-lg-9">
  <h1 class="h2 pb-2 pb-lg-3">Venue</h1>
  <div class="pb-2 pb-lg-3"><span >Get more entries by correctly entering an address. People  nearby can search for the tournament.</span></div>
  <div class="vstack gap-4">
    <!-- Settings form -->
     @{
        string attrValidated = Model.Validated ? "was-validated" : "";
     }
    <form class="needs-validation @attrValidated" novalidate id="page_form" action="~/TournamentVenue" method="POST">
      <div class="position-relative mb-4">
        <label asp-for="Street" class="form-label fs-base">Street Address*</label>
        <input type="text" class="form-control form-control-lg" asp-for="Street" required autocomplete="address-level1" value="@Model.Street">
        <div class="invalid-feedback">Enter venue street address!</div>
      </div>
      <div class="position-relative mb-4">
        <label asp-for="Suburb" class="form-label fs-base">Suburb *</label>
        <input type="text" class="form-control form-control-lg" asp-for="Suburb" required autocomplete="address-level2" value="@Model.Suburb">
        <div class="invalid-tooltip bg-transparent p-0">Enter venue suburb!</div>
      </div>
      <div class="position-relative mb-4">
        <label asp-for="State" class="form-label fs-base">State *</label>
        <input type="text" class="form-control form-control-lg" asp-for="State" required autocomplete="address-level2" value="@Model.State">
        <div class="invalid-tooltip bg-transparent p-0">Enter venue state!</div>
      </div>

      <div class="position-relative mb-4">
        <label asp-for="PostCode" class="form-label fs-base">Post Code *</label>
        <input type="text" class="form-control form-control-lg" asp-for="PostCode" required autocomplete="address-level3" value="@Model.PostCode">
        <div class="invalid-tooltip bg-transparent p-0">Invalid post code! (Numbers only)</div>
      </div>
      <div class="position-relative mb-4">
        <label asp-for="Country" class="form-label fs-base">Country *</label>
        <select asp-items="Model.Countries" class="form-select" asp-for="Country" required>
        </select>
        <div class="invalid-tooltip bg-transparent p-0">Select Country</div>
      </div>
    </form>
  </div>

</div>