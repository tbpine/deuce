@page
@model TournamentSchedulePageModel
@{
    Layout="_LayoutCal";
}
<link rel="stylesheet" href="assets/vendor/flatpickr/dist/flatpickr.min.css">
    <!-- Page content -->
    <main class="content-wrapper">
      <div class="container pt-3 pt-sm-4 pt-md-5 pb-5">
        <div class="row pt-lg-2 pt-xl-3 pb-1 pb-sm-2 pb-md-3 pb-lg-4 pb-xl-5">

        <!-- Sidebar navigation -->
        <aside class="col-lg-3 col-xl-4 mb-3" style="margin-top: -100px">
          <div class="sticky-top overflow-y-auto" style="padding-top: 100px">
            <ul class="nav flex-lg-column flex-nowrap gap-4 gap-lg-0 text-nowrap pb-2 pb-lg-0">
              <li class="nat-item">
                <a class="nav-link d-inline-flex position-relative px-0 px-lg-3 active" href="~/TournamentDetail">
                  <i class="fi-check-circle fs-lg me-2"></i>
                  <span class="hover-effect-underline stretched-link">Tournament Details</span>
                </a>
              </li>
              <li class="nat-item">
                <a class="nav-link d-inline-flex position-relative px-0 px-lg-3 active" href="~/TournamentFormat">
                  <i class="fi-check-circle fs-lg me-2"></i>
                  <span class="hover-effect-underline stretched-link">Format</span>
                </a>
              </li>
              <li class="nat-item">
                <a class="nav-link d-inline-flex position-relative px-0 px-lg-3 active" aria-current="page">
                  <i class="fi-arrow-right-circle d-none d-lg-inline-flex fs-lg me-2"></i>
                  <i class="fi-arrow-down-circle d-lg-none fs-lg me-2"></i>
                  Schedule
                </a>
              </li>
              <li class="nat-item">
                <a class="nav-link d-inline-flex px-0 px-lg-3 disabled">
                  <i class="fi-circle fs-lg me-2"></i>
                  Venue
                </a>
              </li>
              <li class="nat-item">
                <a class="nav-link d-inline-flex px-0 px-lg-3 disabled">
                  <i class="fi-circle fs-lg me-2"></i>
                  Price
                </a>
              </li>
              <li class="nat-item">
                <a class="nav-link d-inline-flex px-0 px-lg-3 disabled">
                  <i class="fi-circle fs-lg me-2"></i>
                  Players
                </a>
              </li>
            </ul>
          </div>
        </aside>



          <!-- Property location inputs -->
          <div class="col-lg-9 col-xl-8">
            <h1 class="h2 pb-1 pb-lg-2">Schedule</h1>
            <div class="row row-cols-2 row-cols-sm-2 g-3 g-sm-4 pb-3 pb-sm-4 mb-xl-2">
              <div class="col">
                <label class="form-label">Start *</label>
                <div class="position-relative">
                  <input type="text" class="form-control form-icon-end" id="start_date" data-datepicker placeholder="Choose date">
                  <i class="fi-calendar position-absolute top-50 end-0 translate-middle-y me-3"></i>
                </div>
              </div>
            
            </div>
            <div class="row row-cols-2 row-cols-sm-2 g-3 g-sm-4 pb-3 pb-sm-4 mb-xl-2">
              <div class="col">
                <label class="form-label">Repeats *</label>
                <select class="form-select form-select-lg" aria-label="District select" >
                  <option value="">Select Interval</option>
                  <option value="0" selected>Does not repeat</option>
                  <option value="4">Weekly</option>
                  <option value="5">Fortnightly</option>
                  <option value="6">Monthly</option>
                </select>
              </div>
              <div class="col">
                <label for="zip" class="form-label">Rounds</label>
                <input type="text" class="form-control form-control-lg" id="rounds" value="1" placeholder="1" required>
              </div>
            </div>

          </div>
        </div>
      </div>
    </main>


    <!-- Prev / Next navigation (Footer) -->
    <footer class="sticky-bottom bg-body pb-3">
      <div class="progress rounded-0" role="progressbar" aria-label="Dark example" aria-valuenow="28.57" aria-valuemin="0" aria-valuemax="100" style="height: 4px">
        <div class="progress-bar bg-dark d-none-dark" style="width: 28.57%"></div>
        <div class="progress-bar bg-light d-none d-block-dark" style="width: 28.57%"></div>
      </div>
      <div class="container d-flex gap-3 pt-3">
        <a class="btn btn-outline-dark animate-slide-start" href="~/TournamentDetail">
          <i class="fi-arrow-left animate-target fs-base ms-n1 me-2"></i>
          Back
        </a>
        <a class="btn btn-dark animate-slide-end ms-auto" href="~/TournamentFormat">
          Next
          <i class="fi-arrow-right animate-target fs-base ms-2 me-n1"></i>
        </a>
      </div>
    </footer>

    <script src="assets/vendor/flatpickr/flatpickr.min.js"></script>
    <script src="assets/vendor/flatpickr/rangePlugin.js"></script>
    <!-- Bootstrap + Theme scripts -->
    <script src="assets/js/theme.min.js"></script>